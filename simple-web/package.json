{
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf dist",
    "public": "cpx 'public/**/{*,.*}' dist -u",
    "server":
      "browser-sync start -s dist -f dist --no-open --no-notify --no-ghost-mode",
    "sass":
      "node-sass src/styles -o dist/styles --importer node_modules/node-sass-import",
    "autoprefixer":
      "postcss dist/**/*.css -u autoprefixer --autoprefixer.browsers 'last 2 versions' -r",
    "watch:public": "chokidar 'public' -c 'yarn public'",
    "watch:sass":
      "chokidar 'src/styles' -c 'yarn sass --output-style expanded --source-map-embed && yarn autoprefixer' --initial",
    "watch:js": "webpack -w",
    "build:sass":
      "yarn sass --output-style compressed && yarn autoprefixer --no-map",
    "build:js": "NODE_ENV=production webpack",
    "watch": "run-p watch:* server",
    "start": "run-s clean public watch",
    "build": "run-s clean public build:*",

    "format": "prettier 'src/**/*.{js,scss}' --write"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "sanitize.css": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.22.0",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "node-sass": "^4.7.2",
    "node-sass-import": "^1.1.1",
    "npm-run-all": "^4.1.2",
    "path": "^0.12.7",
    "postcss-cli": "^4.1.1",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}

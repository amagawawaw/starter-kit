{
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf dist && mkdirp dist",
    "copy:public": "cpx 'public/**/*' dist -v",
    "watch:public": "chokidar 'public' -c 'npm run copy:public' --initial",
    "watch:ejs": "chokidar 'src/**/*.ejs' -c 'npm run build:ejs' --initial",
    "watch:sass":
      "chokidar 'src/styles' -c 'node-sass src/styles -o dist/styles --source-map true --output-style expanded --importer node_modules/node-sass-import' --initial",
    "watch:js": "webpack -w",
    "watch": "run-p watch:* server",
    "build:ejs": "ejs-cli '*.ejs' -b src -o dist",
    "build:sass":
      "node-sass src/styles -o dist/styles --output-style compressed --importer node_modules/node-sass-import",
    "build:js": "NODE_ENV=production webpack",
    "build": "run-s clean copy:public build:*",
    "start": "run-s clean watch",
    "server":
      "browser-sync start -s dist -f dist --no-open --no-notify --no-ghost-mode",
    "format": "prettier 'src/**/*.{js,scss}' --write"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "sanitize.css": "^5.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.22.0",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "ejs-cli": "^2.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "node-sass-import": "^1.1.1",
    "npm-run-all": "^4.1.2",
    "path": "^0.12.7",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}

{
  "scripts": {
    "clean": "rimraf dist/*",
    "copy": "cpx public/**/* dist",
    "watch": "cpx public/**/* dist -vw & webpack -w & browser-sync start -c 'bs-config.js'",
    "start": "npm run clean && npm run copy && npm run watch",
    "build": "npm run clean && npm run copy && NODE_ENV=production webpack",
    "format": "prettier './src/**/*' --write"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.22.0",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "node-sass": "^4.7.2",
    "path": "^0.12.7",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  }
}
